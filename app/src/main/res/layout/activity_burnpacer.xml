<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/buttonbackground"-->
<!--            android:text="Clear"-->
<!--            android:layout_marginTop="620dp"-->
<!--            android:layout_marginStart="50dp"/>-->
<!--    </LinearLayout>-->

</RelativeLayout>






